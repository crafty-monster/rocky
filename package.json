{
  "name": "@crafty.monster/rocky",
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "admin-ui",
    "api",
    "utils"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:*\"",
    "start:ui": "npm start -w @rocky/admin-ui",
    "start:api": "npm start -w @rocky/api",
    "dev": "concurrently \"npm run dev:*\"",
    "dev:ui": "npm run dev -w @rocky/admin-ui",
    "dev:api": "npm run dev -w @rocky/api",
    "inspect": "concurrently \"npm run dev:app\" \"npm run inspect -w @rocky/api\"",
    "build": "npm run build -w @rocky/admin-ui && sleep 1 && mv ./admin-ui/dist ./api/www/admin",
    "build:ui": "npm run build -w @rocky/admin-ui",
    "preview": "npm run preview -w @rocky/admin-ui"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
